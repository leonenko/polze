.mobile-navigation
	display block
	right -110%
	left 110%
	width calc(100% - 50px)
	position fixed
	bottom 0
	top 0
	box-shadow 0 0 15px rgba(0, 0, 0, 0.5)
	// visibility hidden
	// opacity 0
	background-color #fff
	z-index 99 !important
	overflow scroll
	transition right .3s, left .3s
	
	&.active
		visibility visible
		opacity 1
		left 50px
		right 0
		
	&__link
		text-decoration none
		
	&__item
		
		&.active
			>.mobile-navigation__link
				background-color #004b8b
				color #fff
				
				.submenu-toggle
					background-color #00315b
					
					&:after
						border-color: #fff transparent transparent transparent
						
					&.active
						&:after
							border-color: transparent transparent #fff transparent		
						
	
		>.mobile-navigation__link
			color black
			text-transform uppercase
			font-family $raleway
			font-size 14px
			font-weight 700
			padding 18px 15px
			display inline-block
			border-bottom 1px #e8e8e8 solid
			width 100%
			display flex
			justify-content space-between
			
			.submenu-toggle
				size 50px
				background-color #e9f6ff
				border 0
				margin-top -18px
				margin-bottom -18px
				margin-right -15px
				
				&:after
					content ''
					width: 0
					height: 0
					border-style: solid
					border-width: 8px 7px 0px 7px
					border-color: #99c9ee transparent transparent transparent
					display inline-block
					vertical-align middle
					
				&.active
					background-color #f5f5f5
					&:after
						border-width: 0px 7px 8px 7px
						border-color: transparent transparent #99c9ee transparent

			

		.submenu
			background-color #f5f5f5
			border-bottom 1px #e8e8e8 solid
			display none
			
			&.open
				display block
			
			&__item
				border-bottom 1px #e8e8e8 solid
				display block
			
			&__link
				display inline-block
				width 100%
				font-family $raleway
				font-size 14px
				font-weight 700
				line-height 20px
				padding 18px 15px
				text-decoration none
				color #000
				
				&.active
					background-color #004b8b
					color #fff
				
.mobile-nav-active
	overflow hidden				
