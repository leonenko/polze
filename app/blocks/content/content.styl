.content
	display block
	background-color #fff
	font-family $raleway
	padding-top 100px
	padding-bottom 100px
	
	h1
		font-size 55px
		line-height 60px
		font-weight 900
		text-transform uppercase
		padding-top 35px
		padding-bottom 30px
		
	h2
		font-size 35px
		font-weight 700
		line-height 45px
		font-family $lusitana
		text-transform uppercase
		padding-top 30px
		padding-bottom 25px
		
	h3
		font-size 25px
		font-weight 700
		line-height 35px
		font-family $lusitana
		text-transform uppercase
		padding-top 25px
		padding-bottom 20px
		
	p
		font-size 14px
		font-weight 400
		line-height 28px
		margin-bottom 20px
	
	&__header, &__body
		max-width 800px
		margin-x auto
		
	&__header
		text-align center
		margin-bottom 90px
		
		h1
			margin-bottom 30px
		
		p
			font-size 18px
			font-weight 700
			line-height 32px
			
			+to-width(1000px)
				font-size 16px
				line-height 28px


	.timeline
		margin-x 110px
		
		+to-width(1000px)
			margin-x 0
		

	+to-width(1000px)
		padding-left 21px
		padding-right 21px
		
		h1
			font-size 30px
			line-height 40px
			padding-top 30px
			padding-bottom 25px
		
		h2
			font-size 25px
			line-height 35px
			padding-top 25px
			padding-bottom 20px
		
		h3
			font-size 20px
			line-height 30px
			padding-top 20px
			padding-bottom 15px