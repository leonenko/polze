.header
	display block
	height 120px
	background-color #f5f5f5
	position relative
	z-index 2
	transition background-color .3s
	
	+to-width(1010px)
		height 50px
		position fixed
		top 0
		left 0
		right 0
		z-index 99
		
		&.main-page
			height 100px
			background-color transparent
			
			.nav-hamburger
				display none
				
			.lang-switcher
				display none
				
			.header__logo
				size 141px 100px
				
				.logo, svg
					size 105px 75px
	
	.container
		display flex
		align-items center
		position relative
	
	&__logo
		size 240px 170px
		background-color #00315b
		display flex
		justify-content center
		align-items center
		margin-left 30px
		position relative
		z-index 1
		transition height .3s
		
		+to-width(1010px)
			size 85px 60px
			margin-x auto
		
		.logo
			// +to-width(1000px)
			// 	size 141px 100px
			
			+to-width(1000px)
				size 85px 60px
			
			svg
				size 175px 122px
				fill white
				transition height .3s
				
				+to-width(1010px)
					size 66px 60px
					margin-x auto
					display block
					

