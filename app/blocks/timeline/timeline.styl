.timeline
	display block
	
	&__item
		display flex
		margin-bottom 80px
		align-items center
		
		&:first-child
			.timeline__date
				.line
					top 50%
		
		&:last-child
			.timeline__date
				.line
					bottom 50%
					
		+to-width(1000px)
			flex-direction column
			margin-bottom 40px
		
	&__date
		display flex
		align-items center
		justify-content center
		margin-right 89px
		position relative
		height 300px
		
		+to-width(1000px)
			height 90px
			margin-right 0
			width 100%
			align-items flex-start
			
			.line
				display none
		
		.line
			position absolute
			width 1px
			background-color #e2e2e2
			top 0
			bottom -85px
			left 50%
		
		.circle
			size 61px
			background-color whitesmoke
			border-radius 50%
			display block
			text-align center
			color #667
			font-family $raleway
			font-size 14px
			font-weight 400
			line-height 61px
			position relative
			z-index 1
			
	&__image
		min-width 300px
		width 300px
		height 300px
		// background-color #777
		display flex
		justify-content center
		align-items center
		margin-right 80px
		
		img
			max-width 100%
			
		+to-width(1000px)
			width auto
			min-width 100%
			margin-right 0
			

	&__descr
		+to-width(1000px)
			.button
				padding 14px 20px 13px !important
				
		+to-width(320px)
			.button
				width 100%
				text-align center
